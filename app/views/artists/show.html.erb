<h1><%= @artist.name %></h1>

<% @artist.albums.each do |album| %>
	<p><%= link_to album.title, album %></p>
<% end %>

<p><%= link_to "Edit", edit_artist_path(@artist) %></p>
<p>
	<%= link_to "Destroy", artist_path(@artist), data: {
		turbo_method: :delete,
		turbo_confirm: "Are you sure ?"
	} %>
</p>