<%= form_with model: album do |form| %>
 	<div>
 		<%= form.select(:artist_id, @artist_options) %>
 		<% album.errors.full_messages_for(:artist_id).each do |message| %>
 			<div><%= message %></div>
 		<% end %>
 	</div>
 	<div>
 		<%= form.label :title %>
 		<br />
 		<%= form.text_field :title %>
 		<% album.errors.full_messages_for(:title).each do |message| %>
 			<div><%= message %></div>
 		<% end %>
 	</div>
    <div>
        <%= form.label :in_stock %>
        <br />
        <%= form.text_field :in_stock %>
        <% album.errors.full_messages_for(:in_stock).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
    <div>
        <%= form.label :price %>
        <br />
        <%= form.text_field :price %>
        <% album.errors.full_messages_for(:price).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>
 	<div>
 		<%= form.submit %>
 	</div>
 <% end %>
